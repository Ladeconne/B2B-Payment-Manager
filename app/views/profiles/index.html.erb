<div class="main" style="padding: 5rem; overflow:hidden;">
  <div class="cards d-flex">
    <% @profiles.each do |profile| %>
      <div class="card m-3" style="width: 18rem;">
        <div class="card-body align-items-center d-flex flex-column">
          <div class="circle-lg"></div>
          <h5 class="card-title mt-3"><%= profile.name %></h5>
          <%= link_to  "Pick: " + profile.name, dashboard_path(profile_id: profile.id), class:"btn" %>
          <%= link_to profile_path(profile), method: :delete, data:{ confirm: "Are you sure you want to delete this profile?"}, class:"delete-profile" do %>
            <i class="fa fa-trash" aria-hidden="true"></i>
          <% end %>
        </div>
      </div>
    <% end %>
    <div class="card-body align-items-center justify-content-center d-flex flex-column">
      <%= link_to  "Create a new profile", new_profile_path, class:"btn" %>
    </div>
  </div>
</div>
