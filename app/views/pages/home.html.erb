<div id="home">
  <div class="section-title bg-white rounded text-center">
    <h1>Welcome to Beatle</h1>
    <br>
    <p>Manager your finances in a simple and understandable way</p>
  </div>
  <div class="section-devise bg-white rounded text-center">
    <div class="devise-content">
      <p>If you already have an account please log in <br>
      otherwise click on the sign in button</p>
      <div class="button-wrapper d-flex justify-content-around mt-5">
        <%= link_to  "LOGIN", new_user_session_path, class:"btn btn-outline-primary" %>
        <%= link_to  "SIGN UP",  new_user_registration_path, class:"btn btn-primary" %>
      </div>
    </div>
  </div>
</div>
