<%= simple_form_for @new_payment do |f| %>
  <div class="form-title">
    <h3>New payment</h3>
    <%= f.submit "Create Payment", class:"btn btn-outline-primary"%>
  </div>
  <%= f.input :amount, label: "Amount" %>
  <%= f.input :date, label: "Date" %>
  <%= f.input :company_paid, label: "Company" %>
  <%= f.input :description, label: "Description" %>
  <%= f.hidden_field :nature, value: @new_payment.nature %>
  <%= f.hidden_field :profile_id, value: @new_payment.profile_id %>
  <%= f.hidden_field :page, value: @page %>
<% end %>
